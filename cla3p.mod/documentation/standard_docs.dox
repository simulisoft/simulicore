namespace standard_matrix_docs {

/**
 * @brief The default constructor.
 * @details Constructs an empty matrix.
 */
void constructor();

/**
 * @brief The dimensional constructor.
 * @details Constructs a general (nr x nc) matrix with uninitialized values.
 * @param[in] nr The number of matrix rows.
 * @param[in] nc The number of matrix columns.
 * @param[in] pr The matrix property.
 */
void dim_constructor();

/**
 * @brief Creates a matrix from aux data.
 * @details Creates a (nr x nc) matrix from bulk data.
 * @param[in] nr The number of matrix rows.
 * @param[in] nc The number of matrix columns.
 * @param[in] vals The array containing the matrix values in column-major ordering.
 * @param[in] ldv The leading dimension of the vals array.
 * @param[in] bind Binds the data to the matrix, the matrix will deallocate vals on destroy using i_free().
 * @param[in] pr The matrix property.
 */
void aux_constructor();

/**
 * @brief Destroys the matrix object.
 * @details Destroy the matrix and free content memory if needed.
 */
void destructor();

/**
 * @brief The matrix leading dimension.
 * @return The leading dimension of `*this` (column-major: ld() @f$ \geq @f$ nrows()).
 */
void ld();

/**
 * @brief Fills the matrix with a given value.
 * @details Sets all entries of the matrix to a single value.
 * @attention Imaginary part of diagonal is set to zero for Hermitian cases.@n
 *            Diagonal is set to zero for Skew cases.
 * @param[in] val The value to be set.
 */
 void fill();

 /**
 * @brief Gets matrix information.
 * @details Stores matrix information in a readable string.
 * @param[in] header Set a header identifier.
 * @return The matrix info string.
 */
 void info();

/**
 * @brief Creates a matrix with random values in (lo,hi).
 * @details Creates a (nr x nc) matrix with random values.
 * @param[in] nr The number of matrix rows.
 * @param[in] nc The number of matrix columns.
 * @param[in] pr The matrix property.
 * @param[in] lo The smallest value of each generated element.
 * @param[in] hi The largest value of each generated element.
 * @return The newly created matrix.
 */
void random();

/**
 * @brief Creates a matrix guard from aux data.
 * @details Creates a (nr x nc) matrix from bulk data.
 * @param[in] nr The number of matrix rows.
 * @param[in] nc The number of matrix columns.
 * @param[in] vals The array containing the matrix values in column-major ordering.
 * @param[in] ldv The leading dimension of the vals array.
 * @param[in] pr The matrix property.
 * @return The newly created guard.
 */
 void view();

/**
 * @brief Virtually transposes a matrix.
 * @return A virtual expression that represents the transposed matrix.
 * @attention Works for general & triangular properties.
 */
 void virtual_transpose();

 /**
 * @brief Virtually conjugate-transposes a matrix.
 * @return A virtual expression that represents the conjugate-transposed matrix.
 * @attention Works for general & triangular properties.@n
 *            For real matrices, performs simple transposition.
 */
 void virtual_ctranspose();

/**
 * @brief Virtually conjugates a matrix.
 * @return A virtual expression that represents the conjugated matrix.
 */
 void virtual_conjugate();

/**
 * @brief Conjugates the matrix in-place.
 * @details Negates the imaginary part of the elements of the matrix.
 */
void iconjugate();

/**
 * @brief Converts a matrix to general.
 * @return A copy of `*this` with general property.
 */
void general();

/**
 * @brief Converts `*this` to general in-place.
 * @details Converts matrix by filling missing entries and changing its property.
 */
void igeneral();

/**
 * @brief Converts a matrix to dense.
 * @return A copy of `*this` as a dense matrix.
 */
void to_dns();

/**
 * @brief Gets a (guarded) matrix column with content reference.
 * @details Gets a (guarded) vector that references contents of `*this` at column j.
 * @param[in] j The column index requested.
 * @return A (guarded) vector with content reference to `(*this)[0:nrows(),j:j+1]`.
 */
void rcolumn();

/**
 * @brief Gets a matrix column with content copy.
 * @details Gets a copy of the j-th column of the matrix.
 * @param[in] j The column index requested.
 * @return A vector with content copy of `(*this)[0:nrows(),j:j+1]`.
 */
 void column();

/**
 * @brief Gets a (guarded) matrix row with content reference.
 * @details Gets a (guarded) matrix that references contents of `*this` at row `i`.
 * @param[in] i The row index requested.
 * @return A (guarded) matrix with content reference to `(*this)[i:i+1,0:ncols()]`.
 */
void rrow();

/**
 * @brief Gets a matrix row with content copy.
 * @details Gets a copy of the i-th row of the matrix.
 * @param[in] i The row index requested.
 * @return A matrix with content copy of `(*this)[i:i+1,0:ncols()]`.
 */
 void row();

/**
 * @brief Gets a virtual row-vector row with content reference.
 * @details Gets a virtual row-vector that references contents of `*this` at row `i`.
 * @param[in] i The row index requested.
 * @return A virtual row row-vector with content reference to `(*this)[i:i+1,0:ncols()]`.
 */
void rrowvec();

/**
 * @brief Sets a submatrix.
 * @details Copies the contents of `src` to `(*this)[ibgn:ibgn+src.nrows(),jbgn:jbgn+src.ncols()]`.
 * @param[in] ibgn The row index that src will be placed.
 * @param[in] jbgn The column index that src will be placed.
 * @param[in] src The matrix to be placed.
 */
void set_block();

/**
 * @brief Gets a (guarded) submatrix with content reference.
 * @details Gets a (ni x nj) (guarded) matrix that references contents of `*this`, starting at (ibgn, jbgn).
 * @param[in] ibgn The row index that the requested part begins.
 * @param[in] jbgn The column index that the requested part begins.
 * @param[in] ni The number of rows of the requested block.
 * @param[in] nj The number of columns of the requested block.
 * @return A (guarded) matrix with content reference to `(*this)[ibgn:ibgn+ni,jbgn:jbgn+nj]`.
 */
void rblock();

/**
 * @brief Gets a submatrix with content copy.
 * @details Gets a copy of a (ni x nj) block of `*this`, starting at (ibgn, jbgn).
 * @param[in] ibgn The row index that the requested part begins.
 * @param[in] jbgn The column index that the requested part begins.
 * @param[in] ni The number of rows of the requested block.
 * @param[in] nj The number of columns of the requested block.
 * @return A matrix with content copy of `(*this)[ibgn:ibgn+ni,jbgn:jbgn+nj]`.
 */
void block();

/**
 * @brief Permutes a general matrix.
 * @details Creates a permuted copy `P*(*this)*Q` of `*this`.
 * @param[in] P The left side permutation matrix.
 * @param[in] Q The right side permutation matrix.
 * @return The matrix `P*(*this)*Q`.
 */
void permute_leftright();
/**
 * @brief Permutes the rows of a general matrix.
 * @details Creates a permuted copy `P*(*this)` of `*this`.
 * @param[in] P The left side permutation matrix.
 * @return The matrix `P*(*this)`.
 */
void permute_left();
/**
 * @brief Permutes the columns of a general matrix.
 * @details Creates a permuted copy `(*this)*Q` of `*this`.
 * @param[in] Q The right side permutation matrix.
 * @return The matrix `(*this)*Q`.
 */
void permute_right();
/**
 * @brief Permutes a matrix symmetrically.
 * @details Creates a permuted copy `P*(*this)*P^T` of `*this`.
 * @param[in] P The left and right side permutation matrix.
 * @return The matrix `P*(*this)*P^T`.
 */
void permute_mirror();

/**
 * @brief Permutes a general matrix.
 * @details Fills `dest` with the permuted copy `P*(*this)*Q` of `*this`.
 *          Matrix `dest` must be similar to `*this`.
 * @param[in] P The left side permutation matrix.
 * @param[in] Q The right side permutation matrix.
 * @param[out] dest The permuted matrix `P*(*this)*Q`.
 */
void permute_leftright_dst();

/**
 * @brief Permutes the rows of a general matrix.
 * @details Fills `dest` with the permuted copy `P*(*this)` of `*this`.
 *          Matrix `dest` must be similar to `*this`.
 * @param[in] P The left side permutation matrix.
 * @param[out] dest The permuted matrix `P*(*this)`.
 */
void permute_left_dst();
/**
 * @brief Permutes the columns of a general matrix.
 * @details Fills `dest` with the permuted copy `(*this)*Q` of `*this`.
 *          Matrix `dest` must be similar to `*this`.
 * @param[in] Q The right side permutation matrix.
 * @param[out] dest The permuted matrix `(*this)*Q`.
 */
void permute_right_dst();
/**
 * @brief Permutes a matrix symmetrically.
 * @details Fills `dest` with the permuted copy `P*(*this)*P^T` of `*this`.
 *          Matrix `dest` must be similar to `*this`.
 * @param[in] P The left and right side permutation matrix.
 * @param[out] dest The permuted matrix `P*(*this)*P^T`.
 */
void permute_mirror_dst();

